@using System.Globalization
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Account a = new Account();
    Customer customer = new Customer();
    string acc = Context.Session.GetString("account");
    string cus = Context.Session.GetString("customer");
    if (cus != null)
    {
        a = JsonConvert.DeserializeObject<Account>(acc);
        customer = JsonConvert.DeserializeObject<Customer>(cus);
    }
}

@model List<ProductDetail>

<!--================Home Banner Area =================-->
<section class="home_banner_area mb-40" style="background:url(../img/banner/banner.jpg)">
</section>
<!--================End Home Banner Area =================-->
<!--================ Sua tang can =================-->
<section class="feature_product_area section_gap_bottom_custom" style="padding-top:70px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="main_title">
                    <h2><span>Sữa tăng cân bán chạy</span></h2>
                    <p>Top sản phẩm sữa tăng cân bán chạy nhất</p>
                </div>
            </div>
        </div>

        <div class="row" style="display:flex;justify-content:center">
            @foreach (var pro in ViewBag.mass)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-product">
                        <div class="product-img">
                            <img class="img-fluid w-100" src="~/IMGproject/@pro.Img" alt="" />
                            <div class="p_icon">
                                <a href="/Product/ProductDetail?pid=@pro.ProductId&dtid=@pro.DetailId">
                                    <i class="ti-eye"></i>
                                </a>
                                <a href=@( acc!=null ? cus !=null ? "/User/Favorite" :"#Admin" :"/Login/Login")>
                                    <i class="ti-heart"></i>
                                </a>
                            </div>
                        </div>
                        <div class="product-btm">
                            <a href="/Product/ProductDetail?pid=@pro.ProductId&dtid=@pro.DetailId" class="d-block">
                                <h4>@pro.Name</h4>
                            </a>
                            <div class="mt-3">
                                <span class="mr-4">@(string.Format(CultureInfo.GetCultureInfo("vi-VN"),"{0:C}",@pro.SellPrice))</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--================ End Feature Product Area =================-->
